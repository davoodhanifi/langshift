{
    "manifest_version": 3,
    "name": "AI LangShift",
    "version": "1.0",
    "description": "Translate selected text in the page, instantly using OpenAIâ€™s ChatGPT.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["storage", "activeTab", "scripting", "alarms"],
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "translate_selected_text": {
        "suggested_key": {
          "default": "Alt+Shift+T"
        },
        "description": "Translate the selected text"
      }
    },
    "options_page": "options.html",
    "host_permissions": ["https://api.openai.com/*"]
}
  